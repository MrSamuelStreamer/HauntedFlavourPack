<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
    <NeedDef>
        <defName>MSS_Haunted_MutationalStability</defName>
        <needClass>MSS_Haunted.Needs.Needs_MutationalStability</needClass>
        <label>Mutational Stability</label>
        <description>Mutational Stability.</description>
        <colonistAndPrisonersOnly>true</colonistAndPrisonersOnly>
        <listPriority>321</listPriority>
        <freezeWhileSleeping>false</freezeWhileSleeping>
        <major>true</major>
        <developmentalStageFilter>Child, Adult</developmentalStageFilter>
